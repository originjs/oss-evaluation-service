{
  "name": "oss-evaluation-service",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "tsc": "vue-tsc --noEmit",
    "lint": "eslint --cache . --ignore-path .gitignore",
    "lint-fix": "eslint --fix --cache . --ignore-path .gitignore",
    "format": "prettier --write --cache .",
    "test": "vitest",
    "dev-integ": "pnpm -C packages/api-server dev",
    "dev-api": "pnpm -C packages/api-server dev",
    "dev-share": "pnpm -C packages/shared-components dev",
    "dev-web": "pnpm -C packages/website dev",
    "build-share": "pnpm -C packages/shared-components build",
    "serve": "run-p dev-api serve-web",
    "serve-share": "pnpm -C packages/shared-components build --watch",
    "serve-web": "run-s build-share dev-web",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts?(x),js,css}": [
      "eslint --cache --fix",
      "eslint"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.7.2",
    "@types/node": "^18.11.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/typescript": "^1.8.20",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vitest": "^0.3.26",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "eslint-plugin-vue": "^9.23.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.10.0",
    "vitest": "^1.2.2",
    "vue-tsc": "^2.0.6"
  }
}