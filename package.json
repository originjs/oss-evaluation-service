{
  "name": "oss-evaluation-service",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "tsc": "vue-tsc --noEmit",
    "lint": "eslint --cache --ext .js . --ignore-path .gitignore",
    "lint-fix": "eslint --fix --cache --ext .js . --ignore-path .gitignore",
    "format": "prettier --write --cache .",
    "test": "vitest",
    "dev-api-server": "pnpm -C packages/api-server dev",
    "dev-shared-components": "pnpm -C packages/shared-components dev",
    "build-shared-components": "pnpm -C packages/shared-components build",
    "serve-shared-components": "pnpm -C packages/shared-components build --watch",
    "dev-website": "pnpm -C packages/website dev",
    "serve-website": "run-s build-shared-components dev-website",
    "serve": "run-p dev-api-server serve-website",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts?(x),js,css}": [
      "eslint --cache --fix",
      "eslint"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "@types/node": "^18.11.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.23.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.10.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.2.2",
    "vue-tsc": "^2.0.6"
  }
}
