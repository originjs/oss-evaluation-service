{
  "name": "oss-evaluation-service",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --cache --ext .js . --ignore-path .gitignore",
    "lint-fix": "eslint --fix --cache --ext .js . --ignore-path .gitignore",
    "format": "prettier --write --cache .",
    "test": "vitest",
    "dev-website": "pnpm -C packages/website dev",
    "dev-shared-components": "pnpm -C packages/shared-components dev",
    "serve-website": "run-p serve-shared-components dev-website",
    "serve-shared-components": "pnpm -C packages/shared-components build --watch",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts?(x),js,css}": [
      "eslint --cache --fix",
      "eslint"
    ]
  },
  "keywords": [],
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.10.0",
    "vitest": "^1.2.2"
  }
}
